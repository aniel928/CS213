<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SongController">
   <BorderPane prefHeight="500.0" prefWidth="500.0">
      <left>
      	<!-- TODO Add Nodes -->
      	<ListView fx:id="listView" prefHeight="500.0" prefWidth="250.0" BorderPane.alignment="CENTER" />
      </left>
      <center>
         <BorderPane prefHeight="500.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <center>
               <TextFlow prefHeight="400.0" prefWidth="250.0" BorderPane.alignment="CENTER" />
            </center>
            <top>
               <ButtonBar prefHeight="50.0" prefWidth="250.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
                 <buttons>
                   <Button mnemonicParsing="false" style="-fx-background-color: green; -fx-text-fill: white;" text="Add song" />
                 </buttons>
               </ButtonBar>
            </top>
            <bottom>
               <ButtonBar prefHeight="50.0" prefWidth="250.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
                 <buttons>
                   <Button mnemonicParsing="false" style="-fx-background-color: blue; -fx-text-fill: white" text="Edit" />
                 </buttons>
                 <buttons>
                   <Button mnemonicParsing="false" style="-fx-background-color: red;; -fx-text-fill: white" text="Delete" />
                 </buttons>
               </ButtonBar>
            </bottom>
         </BorderPane>
      </center>
   </BorderPane>
</AnchorPane>
